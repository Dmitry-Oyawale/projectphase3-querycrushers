<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.cs3431.yelpapp.YelpController">
   <center>
      <VBox alignment="CENTER" prefHeight="900.0" prefWidth="1600.0" spacing="20.0" styleClass="root">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <HBox prefHeight="47.0" prefWidth="1557.0">
            <children>

               <Label fx:id="searchText" styleClass="subtitle-text" text="Search Results">
                  <HBox.margin>
                     <Insets left="10.0" top="10.0" />
                  </HBox.margin></Label>
            </children>
         </HBox>
         <TableView fx:id="businessTable" prefHeight="774.0" prefWidth="1570.0">
            <columns>
               <TableColumn fx:id="nameColumn" prefWidth="250.0" text="Name" />
               <TableColumn fx:id="addressColumn" prefWidth="300.0" text="Address" />
               <TableColumn fx:id="cityColumn" prefWidth="200.0" text="City" />
               <TableColumn fx:id="starsColumn" prefWidth="150.0" text="Stars" />
               <TableColumn fx:id="tipColumn" prefWidth="150.0" text="Tips" />
               <TableColumn fx:id="latitudeColumn" prefWidth="250.0" text="Latitude" />
               <TableColumn fx:id="longitudeColumn" prefWidth="250.0" text="Longitude" />
            </columns>
         </TableView>
         <Button text="Yelp!" />
      </VBox>
   </center>
   <left>
      <ScrollPane prefHeight="220.0" prefWidth="220.0" BorderPane.alignment="CENTER">
         <content>
            <VBox prefHeight="890.0" prefWidth="200.0" spacing="7.0">
               <children>
                  <Label styleClass="subtitle-text" text="Location">
                     <VBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <ComboBox fx:id="stateComboBox" prefHeight="23.0" prefWidth="215.0" promptText="Select a State">
                     <VBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="2.0" top="2.0" />
                     </padding>
                  </ComboBox>
                  <ComboBox fx:id="cityComboBox" prefHeight="27.0" prefWidth="196.0" promptText="Select a City">
                     <VBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="2.0" top="2.0" />
                     </padding>
                  </ComboBox>
                  <Button fx:id="filterButton" mnemonicParsing="false" prefHeight="23.0" prefWidth="205.0" text="Apply Location Filter">
                     <VBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="2.0" top="2.0" />
                     </padding>
                  </Button>
                  <Label styleClass="subtitle-text" text="Categories">
                     <VBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <ListView fx:id="categoryList" prefHeight="281.0" prefWidth="197.0">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </ListView>
                  <Label styleClass="subtitle-text" text="Attributes">
                     <VBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <ListView fx:id="attributeList" prefHeight="281.0" prefWidth="197.0" />
                  <Button fx:id="searchButton" mnemonicParsing="false" prefHeight="23.0" prefWidth="197.0" text="Search">
                     <padding>
                        <Insets bottom="5.0" top="5.0" />
                     </padding>
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </content>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </ScrollPane>
   </left>
</BorderPane>
