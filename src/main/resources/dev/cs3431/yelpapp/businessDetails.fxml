<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ListView?>
<AnchorPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.cs3431.yelpapp.BusinessDetailsController">
   <children>
      <VBox prefHeight="594.0" prefWidth="700.0" spacing="20.0">
         <children>
             <HBox prefHeight="72.0" prefWidth="700.0" spacing="20.0">
                 <VBox spacing="5.0" prefWidth="200.0">
                     <children>
                         <Label text="Categories for Business:"/>
                         <ListView fx:id="categoryListA" prefHeight="500.0"/>
                     </children>
                 </VBox>
                 <VBox spacing="5.0" prefWidth="200.0">
                     <children>
                         <Label text="Attributes for Business:"/>
                         <ListView fx:id="attributeListA" prefHeight="500.0"/>
                     </children>
                 </VBox>
             </HBox>
            <HBox prefHeight="72.0" prefWidth="700.0">
               <children>
                  <Label fx:id="titleLabel" styleClass="subtitle-text" text="Similar to">
                     <HBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </HBox.margin></Label>
               </children>
            </HBox>
            <TableView fx:id="similarBusinesses" prefHeight="572.0" prefWidth="700.0">
              <columns>
                  <TableColumn fx:id="nameColumn" minWidth="80.0" prefWidth="180.0" text="Name" />
                  <TableColumn fx:id="addressColumn" prefWidth="200.0" text="Address" />
                  <TableColumn fx:id="cityColumn" prefWidth="100.0" text="City" />
                  <TableColumn fx:id="starsColumn" prefWidth="100.0" text="Stars" />
                  <TableColumn fx:id="tipsColumn" text="Tips" />
                  <TableColumn fx:id="latitudeColumn" prefWidth="100.0" text="Latitude" />
                  <TableColumn fx:id="longitudeColumn" prefWidth="100.0" text="Longitude" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
